#!/bin/sh

# Default i3lock colors
Blank='#00000000'
Clear='#ffffff22'
Default='#ff00ffcc'
Text='#ee00eeee'
Wrong='#880000bb'
Verifying='#bb00bbbb'

fg_gray=#928374
fg_red=#fb4934
fg_green=#b8bb26
fg_yellow=#fabd2f
fg_blue=#83a598
fg_purple=#d3869b
fg_aqua=#8ec07c
fg=#ebdbb2

bg_red=#cc241d
bg_yellow=#d79921
bg_blue=#458588
bg_aqua=#689d6a
bg_orange=#d65d0e

bg=#1d2021
bg1=#3c3836
bg2=#504945
bg3=#665c54

Inside="${bg}bb"
Background="${bg}"

RingVerifying="${fg_yellow}bb"
RingWrong="${bg_red}bb"
RingDefault="${fg}bb"

Line=$Blank
Separator=$Blank

Text="${fg}ee"
VerifyingText="${Text}"
WrongText="${Text}"

KeyHighlight="${fg_red}bb"
BackspaceHighlight="${KeyHighlight}"

i3lock \
--color=$Background                 \
--clock                             \
--beep                              \
--timestr="%l:%M %p"                \
--datestr="%F"                      \
--radius 100                        \
\
--insidecolor=$Inside               \
--insidevercolor=$Inside            \
--insidewrongcolor=$Inside          \
--ringcolor=$RingDefault            \
--ringvercolor=$RingVerifying       \
--ringwrongcolor=$RingWrong         \
--linecolor=$Line                   \
--separatorcolor=$Separator         \
--datecolor=$Text                   \
--timecolor=$Text                   \
--verifcolor=$VerifyingText         \
--wrongcolor=$WrongText             \
--layoutcolor=$Text                 \
--keyhlcolor=$KeyHighlight          \
--bshlcolor=$BackspaceHighlight     \

