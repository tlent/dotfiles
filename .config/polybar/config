[colors]
red=#fb4934
green=#b8bb26
yellow=#fabd2f
blue=#83a598
purple=#d3869b
aqua=#8ec07c
gray=#928374

background = #1d2021
background-alt = #3c3836
bg2 = #504945
bg3 = #665c54
foreground = #ebdbb2
foreground-alt = #bdae93
fg4 = #a89984

[bar/top]
width = 100%
height = 24
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
padding-right = 1
module-margin = 1
font-0 = TamzenForPowerline:pixelsize=12
font-1 = MaterialIcons:size=10;2
font-2 = Wuncon Siji:pixelsize=10;1
modules-left = i3
modules-center = date
modules-right = memory cpu volume
cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-padding-left = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-foreground = ${colors.fg4}
label-unfocused-padding-left = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-foreground = ${colors.yellow}
label-visible-padding-left = 1

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.red}
label-urgent-padding-left = 1

[module/date]
type = internal/date
interval = 1

date = %I:%M %p
date-alt = %a %F

label = %date%

[module/volume]
type = internal/alsa

;format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.yellow}
label-volume = %percentage%
mapped = true

format-muted = <label-muted>
format-muted-foreground = ${colors.red}
;label-muted=  %percentage%%
label-muted = %percentage%

;ramp-volume-0 = 
;ramp-volume-1 = 
;ramp-volume-2 = 
;ramp-volume-3 = 

;ramp-headphones-0 = 
;ramp-headphones-1 = 

headphone-mixer = Headphone
headphone-id = 41

interval = 2

[module/cpu]
type = internal/cpu
interval = 1

label = %percentage%
;format-prefix = " "
;format-prefix-font = 3
format-foreground = ${colors.aqua}

[module/memory]
type = internal/memory
interval = 1

label = %percentage_used%
;format-prefix = " "
;format-prefix-font = 3
format-foreground = ${colors.purple}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

; vim:ft=dosini
