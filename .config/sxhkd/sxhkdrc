super + Return
  alacritty

super + @space
  rofi -show run

super + f
  firefox

Print
  maim | tee /tmp/screenshot-$(date +%F_%T).png | xclip -selection c -t image/png

control + Print
  maim -s | tee /tmp/screenshot-$(date +%F_%T).png | xclip -selection c -t image/png

super + {_,shift +}{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

super + {_, shift +}q
  bspc node -{c,k}

super + {_, shift +}{1-9,0}
  bspc {desktop -f, node -d} '^{1-9,10}'

control + shift + alt + {l,s,h,r,f}
  {"$HOME/.yadm/bin/lock",\
  "$HOME/.yadm/bin/lock" && systemctl suspend,\
  "$HOME/.yadm/bin/lock" && systemctl hibernate,\
  systemctl reboot,\
  systemctl poweroff}

XF86AudioRaiseVolume
  amixer set Master 2%+

XF86AudioLowerVolume
  amixer set Master 2%-

XF86AudioMute
  amixer set Master toggle

XF86AudioPlay
  playerctl play-pause || mpc toggle

XF86AudioStop
  playerctl stop || mpc stop

XF86AudioPrev
  playerctl previous || mpc prev

XF86AudioNext
  playerctl next || mpc next

# Apply bspwm config
super + shift + e
  $HOME/.config/bspwm/bspwmrc reload

# Reload sxhkd config
super + shift + r
  pkill -USR1 -x sxhkd

# Restart bspwm
super + alt + Escape
  bspc quit
